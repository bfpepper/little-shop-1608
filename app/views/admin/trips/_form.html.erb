<div class="container">
  <div class="mainbox col-md-8 col-md-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title"><%= @trip.title %></div>
      </div>
      <div class="panel-body">
      <%= form_for([:admin, @trip]) do |f| %>
        <div class="form-group">
          <%= f.label :title, class: "control-label col-md-4" %>
          <%= f.text_field :title, class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, class: "control-label col-md-4" %>
          <%= f.text_field :description, class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price, class: "control-label col-md-4" %>
          <%= f.text_field :price, class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image_url, class: "control-label col-md-4" %>
          <%= f.text_field :image_url, class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :location, class: "control-label col-md-4" %>
          <%= f.text_field :address, class: "input-md textinput textInput form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :category, class: "control-label col-md-4" %>
          <%= f.collection_select :category_ids, @categories, :id, :title, class: "form-inline" %>
        </div>
        <div class="form-group">
          <%= f.label :Retired, class: "control-label col-md-4" %>
          <%= f.check_box(:retired, options = {}, check_value = "retired", unchecked_value = "not_retired") %>
        </div>
      <%= f.submit class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>
